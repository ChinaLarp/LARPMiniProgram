<scroll-view class="page" scroll-y="true">
  <block wx:for="{{gamelist}}" wx:key="index">
    <view class="form">
      <view class="game">
        <image class="pic" src="https://chinabackend.bestlarp.com/pic/{{item.iconurl}}" style="width: 110rpx; height: 110rpx;"></image>
        <view class="info">
          <view class="h1">
            {{item.name}}
          </view>
          <view class="h2">
            {{item.category}}
          </view>
          <view class="h3">
            {{item.descripion}}
          </view>
        </view>
      </view>
      <view class="Dbtn">
        <button size="mini" style="font-size: 24rpx" bindtap="introduction" id="{{item.id}}">详细介绍</button>
      </view>
    </view>
  </block>




