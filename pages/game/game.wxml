<view class="page">
  <view class="page__bd">
    <view class="weui-article">
      <scroll-view scroll-y="true" style="position: fixed; top: 0; width: 100%; height: 100%;">

        <view style='display: flex; flex-direction: row; justify-content: space-between; width: 100%; height: 50%; padding-bottom: 40rpx'>
          <image wx:if="{{gameinfo.coverurl}}" src="https://chinabackend.bestlarp.com/pic/{{gameinfo.coverurl}}" style="width: 49%; height: 98%; padding-top: 60rpx; margin-bottom: 30rpx"></image>

          <view class="weui-article__section" style="width: 45%; height: 48%; margin-left: 20rpx; margin-right: 50rpx">
            <view class="head" style='display: flex; justify-content: center'>{{gameinfo.name}}</view>
            <view class="article">
              {{gameinfo.descripion}}
            </view>
            <view class="article">
              <block wx:for="{{gameinfo.mainplot[0].content}}" wx:for-item="item">
                <view class="article">
                  {{item}}
                </view>
              </block>
            </view>
          </view>

        </view>
        <view class="weui-article__section" style='padding-bottom: 40rpx'>
          <view class="head">人物介绍</view>
          <block wx:for="{{gameinfo.characterlist}}" wx:for-item="item">
            <view class="article" style="font-weight: 300;">
              {{item.name}}
            </view>
            <view class="article">
              {{item.description}}
            </view>
          </block>
        </view>
      </scroll-view>
      <view style="position: fixed; bottom: 0; left: 0; display: flex; flex-direction: row; width: 100%;">
        <button style='width: 33.3%; height: 70rpx; font-size: 30rpx;'>解锁游戏</button>
        <button style='width: 33.3%; height: 70rpx; font-size: 30rpx;'>创建游戏</button>
        <button style='width: 33.3%; height: 70rpx; font-size: 30rpx;'>返回</button>
      </view>
    </view>

  </view>
</view>